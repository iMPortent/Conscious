<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/challengeCardview"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_marginTop="20dp"
        app:cardElevation="10dp"
        android:onClick="onClick"
        android:animationCache="true"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/challengeIcon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="45dp"
            android:src="@drawable/red_drawable"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/challengeBrief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp"
            android:layout_marginStart="100dp"
            android:layout_alignBottom="@+id/typeOne"
            android:layout_alignStart="@+id/challengeType"
            tools:text="Take a picture outside." />

        <TextView
            android:id="@+id/challengeType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginStart="100dp"
            android:layout_toEndOf="@+id/typeOne"
            tools:text="MUSICAL/RHYTHMIC" />


    </android.support.v7.widget.CardView>




</RelativeLayout>