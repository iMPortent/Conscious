<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:padding="20dp">


    <!-- intelligence type cardview-->

    <android.support.v7.widget.CardView
        android:id="@+id/intelligent_type_cv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="8dp">


            <!-- layout inside of intelligence type view:-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:padding="10dp"
                android:orientation="vertical"
               >

                <!-- line image view: before title -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_gravity="center"
                    android:background="@color/colorBlack"
                    android:elevation="2dp"/>

                <!-- intelligent type title text view: -->
                <TextView
                    android:id="@+id/it_type_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Intelligence Type "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorBlack"
                    android:textSize="25sp"
                    android:textStyle="bold" />
                <!-- ends intelligent type title text view: -->

                <!-- line image view: after title -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_gravity="center"
                    android:background="@color/colorBlack"
                    android:elevation="2dp">

                </ImageView>
                <!-- ends line image view: after title -->


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">


                    <ImageView
                        android:id="@+id/it_type_iv"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/it_nature_iv" />


                    <!-- box image view: -->
                    <Button
                        android:id="@+id/it_more_iv"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_alignParentEnd="true"
                        android:background="@color/colorBlack"
                        android:clickable="true"
                        android:elevation="10dp"
                        android:text="MORE"
                        android:textSize="20sp">

                    </Button>
                    <!-- horizontal linear layout for image view + textview -->


                </RelativeLayout> <!-- ends vertical linear layout-->

            </LinearLayout>
                <!-- horizonal linear layout for image views-->


    </android.support.v7.widget.CardView>


</LinearLayout>
