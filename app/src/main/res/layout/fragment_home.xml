<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_fragment_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!-- Intro card view -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:padding="20dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="10dp">

        <!-- introduce all types: title -->
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           >

            <!-- image view: 9 types-->
            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/nine_intelligence_iv"
                android:id="@+id/nine_types_home_iv"
                android:layout_width="250dp"
                android:layout_height="230dp" /> <!-- ends 9 types image view-->

            <!-- introduce all types: description-->

            <!-- intelligent type title text view: -->
            <TextView
                android:id="@+id/home_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="INTELLIGENCE TYPES"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:textStyle="bold" />
            <!-- ends intelligent type title text view: -->


        </LinearLayout>

    </android.support.v7.widget.CardView>    <!-- ends Intro card view -->


    <!-- home intelligent rv -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_intelligent_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>